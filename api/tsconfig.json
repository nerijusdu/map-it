{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6", "es2018.promise", "dom"],
    "sourceMap": true,
    "outDir": "./build",
    "strict": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "types": ["node"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}